RewriteEngine On

# Detecta automaticamente onde o projeto está (não precisa editar RewriteBase)
# RewriteBase /

# Se o arquivo ou pasta existir, não faz nada (serve o arquivo normal)
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d

# Ignora pastas de sistema para evitar loops
RewriteCond %{REQUEST_URI} !^/.+/(pages|services|css|js|Images|utils|database)/

# Regra Mágica: Pega o slug e manda para o "Molde" (pagina-decorador.php)
RewriteRule ^([a-z0-9-]+)/?$ services/pagina-decorador.php?slug=$1 [L,QSA]

# Configurações de segurança (mantidas)
<Files "*.sql">
    Order Allow,Deny
    Deny from all
</Files>
<Files "*.log">
    Order Allow,Deny
    Deny from all
</Files>