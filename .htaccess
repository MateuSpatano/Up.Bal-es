RewriteEngine On

# Define a base para reescrita automática
RewriteBase /

# Condição de Segurança: Se o arquivo ou diretório solicitado existe, não faz nada
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d

# Regra Principal:
# Captura qualquer coisa após a barra (o slug) e envia para o script da página
# O padrão ([a-z0-9-]+) aceita letras, números e hifens
RewriteRule ^([a-z0-9-]+)/?$ services/pagina-decorador.php?slug=$1 [L,QSA]

# Configurações extras de segurança e performance (mantidas do seu original)
<Files "*.sql">
    Order Allow,Deny
    Deny from all
</Files>

<Files "*.log">
    Order Allow,Deny
    Deny from all
</Files>